{% extends 'layouts/base.njk' %}

{% block stylesheets %}
  {{ super() }}
  <link rel="stylesheet" href="dist/DeveloperPage/main.css">
{% endblock %}

{% block body %}
  <h4 class="developer__title">dev</h4>

  <form method="post" action="/developer/register">
    <label>
      a1 input
      <input type="text" name="a1">
    </label>

    <button type="submit">send</button>
  </form>

  {% for product in products %}
    <span>{{ product.title }}: </span>
    <span>{{ product.price }}</span>
  {% endfor %}

  <ul style="margin-top: 20px;">
    {% for item in main_menu %}
      <li style="display: inline-block; margin-right: 15px;">{{ item}}</li>
    {% endfor %}
  </ul>
{% endblock %}
